<h1>Articles</h1>
<hr />
<ul>
<% @articles.each do |article| %>
  <% if article.status == "Posted" or article.author == current_author %>
  <li title="<%= article.author.full_name %>" class="lists">
    &raquo; <%= link_to article.title, article %>
    <ul>
      <li><%= article.body.truncate(10)%></li>
    </ul>
  </li>
  <% end %>
<% end %>
</ul>
<%= will_paginate @articles %>

<% if author_signed_in? %>
<br />
<%= link_to 'New Article', new_article_path %>
<% end %>
