<p id="notice"><%= notice %></p>

<p>
  <b>Title:</b>
  <%= @article.title %>
</p>

<p>
  <b>Author:</b>
  <%= @article.author.full_name %>
</p>

  <b>Body:</b>
<p id = "article_body">
  <%= @article.body%>
</p>

<p>
  <b>Status:</b>
  <%= @article.status%>
</p>

<p>
  <b>Date Posted:</b>
  <%= @article.date_posted%>
</p>

<%= link_to "Comments (#{@article.comments.size})", article_path(@article), :remote => true %> |
<% if current_author == @article.author %>
<%= link_to 'Edit', edit_article_path(@article) %> |
<%= link_to 'Delete', article_path(@article), :method => :delete, :confirm => "Are you sure?" %> |
<% end %>
<%= link_to 'Back', articles_path %>

